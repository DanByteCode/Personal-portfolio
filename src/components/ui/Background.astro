  <path
    filter="url(#f1)"
    d="M 6 6 L 2 10 V 22 L 4 24 V 32 L 2 34 V 46 L 6 50 M 5 10 V 13 L 4 14 V 20 L 6 22 V 23 M 6 25 V 31 M 6 33 V 34 L 4 36 V 42 L 5 43 V 46 M 62 6 L 66 10 V 22 L 64 24 V 32 L 66 34 V 46 L 62 50 M 63 10 V 13 L 64 14 V 20 L 62 22 V 23 M 62 25 V 31 M 62 33 V 34 L 64 36 V 42 L 63 43 V 46"
  ></path>
  <defs>
    <filter
      id="f1"
      color-interpolation-filters="linearRGB"
      filterUnits="objectBoundingBox"
      primitiveUnits="userSpaceOnUse"
    >
      <feDiffuseLighting
        surfaceScale="5.1"
        diffuseConstant="0.8"
        lighting-color="#48f"
        x="0%"
        y="0%"
        width="100%"
        height="100%"
        in="SourceGraphic"
        result="diffuseLighting"
      >
        <fePointLight id="direction" x="0" y="0" z="100"></fePointLight>
      </feDiffuseLighting><feComposite
        in="diffuseLighting"
        in2="SourceAlpha"
        operator="in"
        x="0%"
        y="0%"
        width="100%"
        height="100%"
        result="composite2"></feComposite>
    </filter>
  </defs>
</svg>
<script>
  const light = document.getElementById('direction')
  document.addEventListener('scroll', () => {
    light?.setAttribute('x', calcLight())
  })
  function calcLight() {
    const maxScroll = document.documentElement.scrollHeight + window.innerHeight
    return ((window.scrollY * 360) / maxScroll - 80).toString()
  }
</script>
