---
const { id, name, description } = Astro.props.iconInfo ?? {
  id: 'html',
  name: '',
  description: ''
}
---

<div class="icon">
  <img
    src={`/icon/${id}.svg`}
    alt={name}
    width="32"
    height="32"
    class="aspect-square"
    loading="lazy"
  />
  <div class="tooltip flex flex-col" aria-hidden="true"
    <h4>
      {name}
    </h4>
    <hr />
    <p class="text-sm">
      {description}
    </p>
  </div>
</div>
  <style>
    .icon {
      position: relative;
      transition: scale 0.2s;
    }
    .icon:hover > img {
      scale: 1.1;
    }
    hr{
      border-color: rgb(35, 64, 92);
    }
    .icon:hover > .tooltip {
      visibility: visible;
      transform: scale(1);
    }
    .tooltip {
      transform: scale(0.8);
      transform-origin: left top;
      visibility: hidden;
      position: absolute;
      background-color: #000000d3;
      width: max-content;
      padding: 4px 8px;
      border-radius: 5px;
      top: 0;
      left: 120%;
      max-width: 360px;
      z-index: 10;
      pointer-events: none;
      border: 1px solid rgb(0, 0, 110);
      transition: transform 0.12s;
    }
  </style>  
